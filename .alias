# ~/.alias

alias ls="ls --color=auto --group-directories-first"
alias la="ls --color=auto --group-directories-first -AlF"
alias grep="grep --color=auto"

case $LINUX_FLAVOR in
    wsl)
        alias st="/mnt/c/Program\ Files/Sublime\ Text/sublime_text.exe"
        alias dif="/mnt/c/Program\ Files/Araxis/Araxis\ Merge/Merge.exe"
        alias pw="cygpath -w"
        alias pu="cygpath -u"
        alias f='Explorer.exe .'
        ;;

    linux)
        alias f='nemo .'
        ;;

    msys)
        alias st="/c/Program\ Files/Sublime\ Text/sublime_text.exe"
        alias dif="/c/Program\ Files/Araxis/Araxis\ Merge/Merge.exe"
        alias pw="cygpath -w"
        alias pu="cygpath -u"
        alias f='start .'
        ;;
esac
